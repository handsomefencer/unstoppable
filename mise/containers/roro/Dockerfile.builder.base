# syntax=docker/dockerfile:1

FROM roro/ruby AS base

RUN apk add --update --no-cache \
    build-base \  
    docker \
    docker-cli-compose \
    file \
    git \
    ncurses \
    sudo

RUN git config --global --add safe.directory /usr/src
WORKDIR /usr/src

COPY . .
RUN bundle lock --add-platform x86_64-linux


RUN bundle update --bundler
